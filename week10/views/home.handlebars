<form method="get" action="/add">
    Enter a new workout and it'll be displayed in the table</br>
        Name:
        <input type="text" name="name"></input></br>
        Reps:
        <input type="number" name="reps"></input></br>
        Weight:
        <input type="number" name="weight"></input></br>
        Date:
        <input type="date" name="date"></input></br>
        Pounds or Kgs:</br>
        <input type="radio" name="unit" value="1">Pounds</input></br>
        <input type="radio" name="unit" value="0">Kgs</input></br>
        
        <button type="submit">Submit</button></br>
</form>

<table border="1px solid black">
    <tr>
        <td>Name</td>
        <td>Reps</td>
        <td>Weight</td>
        <td>Date</td>
        <td>Units</td>
        <td></td>
        <td></td>
    </tr>
    {{#each content}}
    <tr>
        <td>{{this.name}}</td>
        <td>{{this.reps}}</td>
        <td>{{this.weight}}</td>
        <td>{{this.date}}</td>
        <td>{{this.units}}</td>
        <td><form method="get" action="/edit"><input type="hidden" value={{this.id}} name="id"></input><button>Edit</button></form></td>
        <td><form method="get" action="/delete"><input type="hidden" value={{this.id}} name="id"></input><button>Delete</button></form></td>
    </tr>
    {{/each}}
</table>